{
  "name": "robier/sig",
  "type": "library",
  "description": "Simple library for handling linux signals",
  "license": "MIT",
  "minimum-stability": "dev",
  "prefer-stable" : true,
  "authors": [
    {
      "name": "Robert Premar",
      "email": "robert.premar@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.1",
    "ext-pcntl" : "*"
  },
  "autoload": {
    "psr-4": {"Robier\\SIG\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"Robier\\SIG\\Tests\\": "tests/"}
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "friendsofphp/php-cs-fixer": "^2.3"
  },
  "scripts": {
    "lint" : "vendor/bin/php-cs-fixer fix"
  }
}
